{% extends 'base.html.twig' %}

{% block title %}Expererience index{% endblock %}

{% block body %}
    <h1>Expererience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Company</th>
                <th>StartAt</th>
                <th>EndAt</th>
                <th>IsActual</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expererience in expereriences %}
            <tr>
                <td>{{ expererience.id }}</td>
                <td>{{ expererience.title }}</td>
                <td>{{ expererience.description }}</td>
                <td>{{ expererience.company }}</td>
                <td>{{ expererience.startAt ? expererience.startAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ expererience.endAt ? expererience.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ expererience.isActual ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('expererience_show', {'id': expererience.id}) }}">show</a>
                    <a href="{{ path('expererience_edit', {'id': expererience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('expererience_new') }}">Create new</a>
{% endblock %}
